{% extends "layout.njk" %}

{% block header %}

    <header>
        <div>
            <a href="/">Home</a>
            <a href="https://discordapp.com/invite/gCRAFhc" target="_blank">Community</a>
            <a href="mailto:oi@rocketseat.com.br">Email</a>
            <a href="tel:+5547992078767">Phone</a>
            <a href="/about">About</a>
            <a href="/content" class="current-page">Content</a>
        </div>
    </header>

{% endblock %}

{% block content %}

    <h2 class="page-title">Posts</h2>

    <section class="cards">

    {% for card in cards %}

        <div class="card" id="{{ card.id }}">
            <div class="card-image">
                <img src="{{ card.image_url }}" alt="{{ card.title }} Post Image" />
            </div>
            <div class="card-title">
                <p>{{ card.title }}</p>
            </div>
            <div class="card-info">
                <p class="author">{{ card.author }}</p>
                <p class="reading-time">{{ card.reading_time }} min de leitura</p>
            </div>
        </div>

    {% endfor %}

    <div class="modal-overlay">
        <div class="modal">
            <a class="modal-maximize">
                <span class="material-icons">open_in_full</span>
            </a>
            <a class="modal-close">
                <span class="material-icons">close</span>
            </a>
            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="/scripts/main.js"></script>

{% endblock %}
