{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section class="profile-picture"
            style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
    </section>

    <section class="profile-details">
        <h3>
            Details
        </h3>

        <div class="profile-detail">
            <div>
                Name
            </div>

            <div>
                {{ teacher.name }}
            </div>
        </div>

        <div class="profile-detail">
            <div>
                Age
            </div>

            <div>
                {{ teacher.age }}
            </div>
        </div>

        <div class="profile-detail">
            <div>
                Academic Degree
            </div>

            <div>
                {{ teacher.education_level }}
            </div>
        </div>

        <div class="profile-detail">
            <div>
                Teaching Method
            </div>

            <div>
                {{ teacher.class_type }}
            </div>
        </div>

        <div class="profile-detail">
            <div>
                Subjects
            </div>

            <div>
                {% for subject in teacher.subjects_taught %}
                    <span>
                        {{ subject }}
                    </span>
                {% endfor %}
            </div>
        </div>

        <div class="profile-detail">
            <div>
                Member Since
            </div>

            <div>
                {{ teacher.created_at }}
            </div>
        </div>

        <a href="/teachers/{{ teacher.id }}/edit" class="button">Edit</a>
     </section>
</div>

{% endblock %}
