<!-- Rocketseat: LaunchBase Bootcamp
     Challenge 05-04: Database Results Pagination -->

<div class="profile-detail hide-border">
    <div>
        Profile Picture
    </div>

    <div>
        <input type="url" name="avatar_url" placeholder="URL" value="{{ teacher.avatar_url }}">
    </div>
</div>

<div class="profile-detail hide-border">
    <div>
        Name
    </div>

    <div>
        <input type="text" name="name" placeholder="First Name and Last Name" value="{{ teacher.name }}">
    </div>
</div>

<div class="profile-detail hide-border">
    <div>
        Birthday
    </div>

    <div>
        <input type="date" name="birth_date" value="{{ teacher.birth_date }}">
    </div>
</div>

<div class="profile-detail hide-border">
    <div>
        Academic Degree
    </div>

    <div>
        <select name="education_level">
                <option value="Associate"
                        {% if teacher.education_level == "Associate" %}
                            selected
                        {% endif %}>
                    Associate
                </option>

                <option value="Bachelor"
                        {% if teacher.education_level == "Bachelor" %}
                            selected
                        {% endif %}>
                    Bachelor
                </option>

                <option value="Master"
                        {% if teacher.education_level == "Master" %}
                            selected
                        {% endif %}>
                    Master
                </option>

                <option value="Doctor"
                        {% if teacher.education_level == "Doctor" %}
                            selected
                        {% endif %}>
                    Doctor
                </option>
        </select>
    </div>
</div>

<div class="profile-detail hide-border">
    <div>
        Teaching Method
    </div>

    <div>
        <span>
                <input type="radio" name="class_type" value="Onsite"
                    {% if teacher.class_type == "Onsite" %}
                        checked
                    {% endif %}>
                Onsite
        </span>

        <span>
                <input type="radio" name="class_type" value="Online"
                    {% if teacher.class_type == "Online" %}
                        checked
                    {% endif %}>
                Online
        </span>
    </div>
</div>

<div class="profile-detail hide-border">
    <div>
        Subjects
    </div>

    <div>
        <input type="text" name="subjects_taught" placeholder="First subject, second subject, third subject etc." value="{{ teacher.subjects_taught }}">
    </div>
</div>

<button type="submit">Save</button>
