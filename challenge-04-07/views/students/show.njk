<!-- Rocketseat: LaunchBase Bootcamp
     Challenge 04-07: Structuring Students -->

{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section class="profile-picture"
            style="background: url({{ student.profilePicture }}) no-repeat center center / cover">
    </section>

    <section class="profile-details">
        <h3>
            Details
        </h3>

        <div class="profile-detail">
            <div>
                Name
            </div>

            <div>
                {{ student.name }}
            </div>
        </div>

        <div class="profile-detail">
            <div>
                Email
            </div>

            <div>
                {{ student.email }}
            </div>
        </div>

        <div class="profile-detail">
            <div>
                Birthday
            </div>

            <div>
                {{ student.birthday }}
            </div>
        </div>

        <div class="profile-detail">
            <div>
                School Grade Level
            </div>

            <div>
                {{ student.schoolGradeLevel }}
            </div>
        </div>

        <div class="profile-detail">
            <div>
                Weekly Workload
            </div>

            <div>
                {{ student.weeklyWorkload }}
                    {% if student.weeklyWorkload > 1 %}
                        hours
                    {% else %}
                        hour
                    {% endif %}
            </div>
        </div>

        <a href="/students/{{ student.id }}/edit" class="button">Edit</a>
     </section>
</div>

{% endblock %}
