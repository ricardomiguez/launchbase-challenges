{% extends "layouts/admin.njk" %}

{% block head %}

    <title>Editando chef | Foodfy Admin</title>

{% endblock %}

{% block header %}

    <header class="admin-header">
        <div class="header-wrapper">
            <div class="admin-header-logo">
                <a href="/admin/recipes">
                    <img src="/images/logo-white.png" alt="Foodfy">
                </a>
            </div>

            <div class="admin-header-nav">
                <nav>
                    <ul>
                        <li>
                            <a href="/admin/recipes">
                                Receitas
                            </a>
                        </li>

                        <li>
                            <a href="/admin/chefs" class="current-page">
                                Chefs
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

{% endblock %}

{% block content %}

    <main>
        <header class="admin-main-header edit-page-header">
            <div>
                <h2>
                    Editando chef
                </h2>

                <div class="admin-header-button">
                    <form action="/admin/chefs?_method=delete" method="post">
                        <button type="submit" class="delete-button">
                            Deletar
                        </button>

                        <input type="hidden" name="id" value="{{ chef.id }}">
                    </form>

                    <button type="submit" form="chef-form" class="save-button">
                        Salvar chef
                    </button>
                </div>
            </div>
        </header>

        <form id="chef-form" action="/admin/chefs?_method=put" method="post">
            <section class="chef-details">
                <div class="admin-chef-details-name">
                    <h5>
                        Nome
                    </h5>

                    <div>
                        <input type="text" name="name" value="{{ chef.name }}">
                    </div>
                </div>

                <div class="admin-chef-details-avatar">
                    <h5>
                        Avatar
                    </h5>

                    <div>
                        <input type="url" name="avatar_url" value="{{ chef.avatar_url }}">
                    </div>
                </div>
            </section>

            <input type="hidden" name="id" value="{{ chef.id }}">
        </form>
    </main>

{% endblock %}
