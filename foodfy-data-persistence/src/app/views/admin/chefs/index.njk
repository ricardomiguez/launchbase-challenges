{% extends "layouts/admin.njk" %}

{% block head %}

    <title>Chefs | Foodfy Admin</title>

{% endblock %}

{% block header %}

    <header class="admin-header">
        <div class="header-wrapper">
            <div class="admin-header-logo">
                <a href="/admin/recipes">
                    <img src="/images/logo-white.png" alt="Foodfy">
                </a>
            </div>

            <div class="admin-header-nav">
                <nav>
                    <ul>
                        <li>
                            <a href="/admin/recipes">
                                Receitas
                            </a>
                        </li>

                        <li>
                            <a href="/admin/chefs" class="current-page">
                                Chefs
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

{% endblock %}

{% block content %}

    <main>
        <header class="admin-main-header index-page-header">
            <div class="admin-chef">
                <h2>
                    Gerenciar chefs
                </h2>

                <div class="admin-header-hyperlink">
                    <a href="/admin/chefs/create">
                        Criar chef
                    </a>
                </div>
            </div>
        </header>

        {% if chefs.length > 0 %}

            <section class="admin-chefs">

                    {% for chef in chefs %}

                        <article class="admin-chef">
                                <div class="admin-chef-avatar">
                                    <img src="{{ chef.avatar_url }}" alt="{{ chef.name }}">
                                </div>

                                <div>
                                    <div class="admin-chef-name">
                                        <p>
                                            {{ chef.name }}
                                        </p>
                                    </div>

                                    <div class="admin-chef-hyperlink">
                                        <a href="/admin/chefs/{{ chef.id }}">
                                            Visualizar
                                        </a>
                                    </div>
                                </div>
                        </article>

                    {% endfor %}

            </section>

        {% else %}

            <div>
                <p>
                    NÃ£o existem chefs cadastrados
                </p>
            </div>

        {% endif %}

    </main>

{% endblock %}
