{% extends "layouts/public.njk" %}

{% block head %}

    <script src="/scripts/main.js" defer></script>
    <title>Receitas | Foodfy</title>

{% endblock %}

{% block header %}

    <header class="header">
        <div class="header-wrapper">
            <div class="header-logo">
                <a href="/">
                    <img src="/images/logo-black.png" alt="Foodfy">
                </a>
            </div>

            <div class="header-nav">
                <nav>
                    <ul>
                        <li>
                            <a href="/about">
                                Sobre
                            </a>
                        </li>

                        <li>
                            <a href="/recipes" class="current-page">
                                Receitas
                            </a>
                        </li>

                        <li>
                            <a href="/chefs">
                                Chefs
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <div class="header-filter">
                <form action="/recipes/search" method="get">
                    <input type="text" name="filter" placeholder="Buscar uma receita" value="{{ filter }}">

                    <button type="submit">Buscar</button>
                </form>
            </div>
        </div>
    </header>

{% endblock %}

{% block content %}

    <main>

        {% if recipes.length > 0 %}

            <section class="recipes">

                {% for recipe in recipes %}

                    <article class="recipe" id="{{ recipe.id }}">
                        <div class="recipe-image recipe-image-active">
                            <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
                        </div>

                        <div>
                            <div class="recipe-title recipe-title-active">
                                <h4>
                                    {{ recipe.title }}
                                </h4>
                            </div>

                            <div class="recipe-author">
                                <p>
                                    por {{ recipe.author }}
                                </p>
                            </div>
                        </div>
                    </article>

                {% endfor %}

            </section>

        {% else %}

            <div class="recipes-message-wrapper">
                <p>
                    NÃ£o existem receitas cadastradas
                </p>
            </div>

        {% endif %}

    </main>

{% endblock %}
