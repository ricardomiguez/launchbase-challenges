     Challenge 05-02: Interacting with the Database -->

{% extends "layout.njk" %}

{% block content %}

<div class="card table-container teachers-index">
    <table width="100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>

                <th>
                    Subjects
                </th>

                <th>
                    Option
                </th>
            </tr>
        </thead>

        <tbody>
            {% for teacher in teachers %}
                <tr>
                    <td>
                        <span style="background-image: url({{ teacher.avatar_url }})"></span>
                        {{ teacher.name }}
                    </td>

                    <td>
                        {{ teacher.subjects_taught }}
                    </td>

                    <td>
                        <a href="/teachers/{{ teacher.id }}">
                            Show Profile
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="new-registration-wrapper">
        <a href="/teachers/create">+</a>
    </div>
</div>

{% endblock %}
