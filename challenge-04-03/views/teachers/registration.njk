<!-- Rocketseat: LaunchBase Bootcamp
     Challenge 04-03: Teacher Form and Registration Route -->

{% extends "layout.njk" %}

{% block content %}

<form class="card" action="/teachers" method="post">
     <section class="profile-picture">
     </section>

     <section class="profile-details">
          <h3>
               Registration
          </h3>

          <div class="profile-detail hide-border">
               <div>
                    Profile Picture
               </div>

               <div>
                    <input type="url" name="profilePicture" placeholder="URL">
               </div>
          </div>

          <div class="profile-detail hide-border">
               <div>
                    Name
               </div>

               <div>
                    <input type="text" name="name" placeholder="First Name and Last Name">
               </div>
          </div>

          <div class="profile-detail hide-border">
               <div>
                    Birthday
               </div>

               <div>
                    <input type="date" name="birthday">
               </div>
          </div>

          <div class="profile-detail hide-border">
               <div>
                    Academic Degree
               </div>

               <div>
                    <select name="academicDegree">
                         <option value="0">Associate</option>
                         <option value="1">Bachelor</option>
                         <option value="2">Master</option>
                         <option value="3">Doctor</option>
                    </select>
               </div>
          </div>

          <div class="profile-detail hide-border">
               <div>
                    Teaching Method
               </div>

               <div>
                    <span>
                         <input type="radio" name="teachingMethod" value="Onsite" checked>Onsite
                    </span>

                    <span>
                         <input type="radio" name="teachingMethod" value="Online">Online
                    </span>
               </div>
          </div>

          <div class="profile-detail hide-border">
               <div>
                    Subjects
               </div>

               <div>
                    <input type="text" name="subjects" placeholder="First subject, second subject, third subject etc.">
               </div>
          </div>

          <button type="submit">Save</button>
     </section>
</form>

{% endblock %}
